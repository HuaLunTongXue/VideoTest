<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/flClickGuide"
    android:background="@drawable/vendor_home_guide_icon_bg"
    android:onClick="guideOnclick"
    tools:context="kevin.android.om.videotest.fragments.GuideFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fresco_image"
            android:src="@drawable/vendor_home_guid_icon"
            android:layout_width="82dp"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="操作说明"
            android:textSize="30sp" />


    </LinearLayout>
</FrameLayout>
